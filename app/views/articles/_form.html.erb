<%= render 'shared/errors', obj: @article %>

<div class="row">
  <%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :title %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :title, class: "from-control", placeholder: "Titre de l'article" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :description %>
      </div>
      <div class="col-sm-10">
        <%= f.text_area:description, class: "from-control", placeholder: "Description" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.submit %>
    </div>


  <% end %>
</div>

