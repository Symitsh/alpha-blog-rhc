<div class="row">
  <div class="col-xs-offset-2 col-xs-10">
  <h2><%= @article.title %></h2>

  <div class="well col-xs-6">
    <%= @article.description %>

    <div class="article-actions">
          <%= link_to "Editer cet article", edit_article_path(@article), class: "btn btn-xs btn-primary" %>
          <%= link_to "Supprimer cet article",article_path(@article), data: { "turbo-method": :delete, turbo_confirm: 'Vous êtes-sûr?' }, class: "btn btn-danger ml-3" %>
      <%= link_to "Retour à la liste", articles_path, class: "btn btn-xs btn-success" %>
    </div>
  </div>
</div>
