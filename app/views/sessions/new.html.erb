<h1 align="center">Se connecter</h1>

<div class="row center">
  <div class="col-sm-offset-2">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :email %>
        </div>
        <div class="col-sm-10">
          <%= f.text_field :email, class: "from-control", placeholder: "Votre email" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2 control-label">
          <%= f.label :password %>
        </div>
        <div class="col-sm-10">
          <%= f.password_field:password, class: "from-control", placeholder: "Votre mot de passe", autocomplete: "off" %>
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-10">
          <%= f.submit "Se connecter", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
