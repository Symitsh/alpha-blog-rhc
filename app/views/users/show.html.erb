<h1 align="center">Bienvenue <%= @user.username %></h1>

<div class='row'>
  <div class="col-md-4 col-md-offset-4 center">
    <%= gravatar_for 'my@mail', :size => 120, :class => 'img-class', :alt => 'me' %>
  </div>
</div>
<h4 align="center">Article(s) de <%= @user.username %></h4>

<div class='row'>
  <div class="col-md-6 col-md-offset-3 center">
    <%= render 'articles/articles', obj: @user.articles %>
  </div>
</div>
