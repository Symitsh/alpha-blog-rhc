<%= render 'shared/errors', obj: @user %>

<div class="row">
  <%= form_for(@user, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :username %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :username, class: "from-control", placeholder: "Entrez votre nom d'utilisateur" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :email %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field:email, class: "from-control", placeholder: "Votre email" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-2 control-label">
        <%= f.label :password %>
      </div>
      <div class="col-sm-10">
        <%= f.password_field:password, class: "from-control", placeholder: "Votre mot de passe" %>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit(@user.new_record? ? "S'inscrire" : "Mettre à jour", class: "btn btn-primary") %>
    </div>
  <% end %>
</div>


<%= link_to "Retour à la liste des articles", articles_path %>
